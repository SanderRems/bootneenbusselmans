    <h2>Activiteitenlog</h2>
    <div id="log" class="log"></div>
  </div>

  <script>
    let score = 100;
    const scoreElement = document.getElementById('score');
    const statusElement = document.getElementById('status');
    const logElement = document.getElementById('log');
    const alertElement = document.getElementById('alert');
    
    // Load saved score if exists
    if (localStorage.getItem('vrijgezellenScore')) {
      score = parseInt(localStorage.getItem('vrijgezellenScore'));
      updateScore();
    }
    
    function updateScore() {
      scoreElement.textContent = score;
      localStorage.setItem('vrijgezellenScore', score);
      
      if (score <= 0) {
        statusElement.textContent = 'Status: Handboeien LOS!';
        statusElement.style.color = '#34a853';
        showAlert('üéâ GEFELICITEERD! De handboeien zijn los!', '#34a853');
      } else {
        statusElement.textContent = 'Status: Handboeien VAST';
        statusElement.style.color = '#ea4335';
      }
    }
    
    function decreaseScore(amount) {
      const oldScore = score;
      score = Math.max(0, score - amount);
      logActivity(`-${amount} punten: Nieuwe sterkte = ${score}`);
      
      if (oldScore > 0 && score <= 0) {
        // Reaching 0 for the first time
        showAlert('üéâ GEFELICITEERD! De handboeien zijn los!', '#34a853');
      }
      
      updateScore();
    }
    
    function increaseScore(amount) {
      const oldScore = score;
      score = score + amount;
      logActivity(`+${amount} punten: Nieuwe sterkte = ${score}`);
      
      if (oldScore <= 0 && score > 0) {
        // Going back above 0
        showAlert('üò± De handboeien zitten weer vast!', '#ea4335');
      }
      
      updateScore();
    }
    
    function resetScore() {
      score = 100;
      logActivity('Score reset naar 100');
      updateScore();
    }
    
    function logActivity(message) {
      const now = new Date();
      const timeString = now.toLocaleTimeString();
      const logEntryElement = document.createElement('div');
      logEntryElement.className = 'log-entry';
      logEntryElement.textContent = `${timeString}: ${message}`;
      logElement.prepend(logEntryElement);
      
      // Save to local storage (latest 20 entries)
      let logHistory = JSON.parse(localStorage.getItem('vrijgezellenLog') || '[]');
      logHistory.unshift({time: timeString, message: message});
      if (logHistory.length > 20) logHistory = logHistory.slice(0, 20);
      localStorage.setItem('vrijgezellenLog', JSON.stringify(logHistory));
    }
    
    function showAlert(message, color) {
      alertElement.textContent = message;
      alertElement.style.backgroundColor = color;
      alertElement.style.display = 'block';
      
      setTimeout(() => {
        alertElement.style.display = 'none';
      }, 5000);
    }
    
    // Load previous log entries if any
    function loadLogHistory() {
      const logHistory = JSON.parse(localStorage.getItem('vrijgezellenLog') || '[]');
      logHistory.forEach(entry => {
        const logEntryElement = document.createElement('div');
        logEntryElement.className = 'log-entry';
        logEntryElement.textContent = `${entry.time}: ${entry.message}`;
        logElement.appendChild(logEntryElement);
      });
    }
    
    // Initialize
    updateScore();
    loadLogHistory();
    if (!localStorage.getItem('vrijgezellenLogStarted')) {
      logActivity('Vrijgezellendag gestart! Sterkte = 100');
      localStorage.setItem('vrijgezellenLogStarted', 'true');
    }
  </script>
